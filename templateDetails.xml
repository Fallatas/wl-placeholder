<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>wl-placholder</name>
	<version>1.0</version>
	<creationDate>27/06/2018</creationDate>
	<author>Thomas Winterling</author>
	<authorEmail>fallatas85@gmail.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2017 Thomas Winterling. All rights reserved.</copyright>
	<description>TPL_PROTOSTAR_XML_DESCRIPTION</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>js</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<fieldset>

					<field
							name="heading"
							type="text"
							default="Neue Webseite"
							label="Überschrift wählen"
							description="Beliebige Überschrift wählen"
							size="10"
					/>

					<field
							name="notice"
							type="text"
							default="Hier entsteht gerade eine neue Website"
							label="Notiz wählen"
							description="Beliebige Notiz wählen"
							size="10"
					/>

					<field
							name="heading-color"
							type="color"
						   	default="#ffffff"
						   	label="Farbe der Überschrift wählen"
						   	description="Beliebige Farbe der Überschrift wählen"
					/>

					<field
							name="notice-color"
						   	type="color"
						   	default="#ffffff"
						   	label="Farbe der Notiz wählen"
							description="Beliebige Farbe der Notiz wählen"
					/>

					<field
							name="background-color"
							type="color"
							default="#111111"
							label="Farbe des Hintergrunds wählen"
							description="Beliebige Farbe für den Hintergrund wählen"
					/>

					<field
							name="date"
							type="calendar"
							default="2017-05-15"
							label="Wähle ein Datum"
							description="Beliebiges Datum wählen"
						   	class="input-medium"
							required="true"
							filter="user_utc"
							format="%Y-%m-%d %H:%M:%S"
						   	singleheader="true"
							showtime="true"
							timeformat="12"
							todaybutton="true"
							weeknumbers="true"
						   	filltable="true"
							minyear="-3"
							maxyear="5"
					/>

                    <field
                            name="date-color"
                            type="color"
                            default="#ff6600"
                            label="Farbe der Zeit wählen"
                            description="Beliebige Farbe für die Zeit wählen"
                    />

				</fieldset>
			</fieldset>
		</fields>
	</config>
	<positions>
		
	</positions>
</extension>
