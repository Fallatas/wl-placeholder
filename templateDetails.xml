<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>wl-placeholder</name>
	<version>1.0</version>
	<creationDate>27/06/2018</creationDate>
	<author>Thomas Winterling</author>
	<authorEmail>fallatas85@gmail.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2018 Thomas Winterling. All rights reserved.</copyright>
	<description>TPL_WL-PLACEHOLDER_XML_DESCRIPTION</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>js</folder>
	</files>
    <languages folder="language">
        <language tag="de-DE">de-DE.tpl_wl-placeholder.ini</language>
        <language tag="de-DE">de-DE.tpl_wl-placeholder.sys.ini</language>
    </languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">

					<field
							name="heading"
							type="text"
							default="Neue Webseite"
							label="TPL_WL-PLACEHOLDER_HEADING_LABEL"
							description="TPL_WL-PLACEHOLDER_HEADING_DESC"
							size="10"
					/>

					<field
							name="notice"
							type="text"
							default="Hier entsteht gerade eine neue Website"
							label="TPL_WL-PLACEHOLDER_NOTICE_LABEL"
							description="TPL_WL-PLACEHOLDER_NOTICE_DESC"
							size="10"
					/>

					<field
							name="heading-color"
							type="color"
						   	default="#ffffff"
						   	label="TPL_WL-PLACEHOLDER_HEADING_COLOR_LABEL"
						   	description="TPL_WL-PLACEHOLDER_HEADING_COLOR_DESC"
					/>

					<field
							name="notice-color"
						   	type="color"
						   	default="#ffffff"
						   	label="TPL_WL-PLACEHOLDER_NOTICE_COLOR_LABEL"
							description="TPL_WL-PLACEHOLDER_NOTICE_COLOR_DESC"
					/>

					<field
							name="background-color"
							type="color"
							default="#111111"
							label="TPL_WL-PLACEHOLDER_BACKGROUND_COLOR_LABEL"
							description="TPL_WL-PLACEHOLDER_BACKGROUND_COLOR_DESC"
					/>

					<field
							name="date"
							type="calendar"
							default="2017-05-15"
							label="TPL_WL-PLACEHOLDER_DATE_LABEL"
							description="TPL_WL-PLACEHOLDER_DATE_DESC"
						   	class="input-medium"
							required="true"
							filter="user_utc"
							format="%Y-%m-%d %H:%M:%S"
						   	singleheader="true"
							showtime="true"
							timeformat="12"
							todaybutton="true"
							weeknumbers="true"
						   	filltable="true"
							minyear="-3"
							maxyear="5"
					/>

                    <field
                            name="date-color"
                            type="color"
                            default="#ff6600"
                            label="TPL_WL-PLACEHOLDER_DATE_COLOR_LABEL"
                            description="TPL_WL-PLACEHOLDER_DATE_COLOR_DESC"
					/>

			</fieldset>
		</fields>
	</config>
</extension>
